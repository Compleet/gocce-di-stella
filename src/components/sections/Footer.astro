---
/**
 * Footer - Site footer with navigation, newsletter, and legal
 *
 * Elegant footer design with subtle decorative elements.
 */

interface Props {
  lang: 'en' | 'it';
}

const { lang } = Astro.props;

const content = {
  en: {
    tagline: 'Nature\'s ancient wisdom, bottled with care.',
    shop: {
      title: 'Shop',
      links: [
        { href: '/en/shop', label: 'All Oils' },
        { href: '/en/shop?category=citrus', label: 'Citrus' },
        { href: '/en/shop?category=floral', label: 'Floral' },
        { href: '/en/shop?category=herbal', label: 'Herbal' },
      ]
    },
    company: {
      title: 'Company',
      links: [
        { href: '/en/about', label: 'Our Story' },
        { href: '/en/sourcing', label: 'Sourcing' },
        { href: '/en/contact', label: 'Contact' },
        { href: '/en/faq', label: 'FAQ' },
      ]
    },
    newsletter: {
      title: 'Join Our Journey',
      description: 'Receive wisdom on aromatherapy, seasonal rituals, and early access to new harvests.',
      placeholder: 'Your email',
      button: 'Subscribe',
      privacy: 'We respect your privacy. Unsubscribe anytime.'
    },
    legal: {
      rights: 'All rights reserved.',
      privacy: 'Privacy Policy',
      terms: 'Terms of Service',
      shipping: 'Shipping & Returns'
    }
  },
  it: {
    tagline: 'L\'antica saggezza della natura, imbottigliata con cura.',
    shop: {
      title: 'Negozio',
      links: [
        { href: '/it/shop', label: 'Tutti gli Oli' },
        { href: '/it/shop?category=agrumi', label: 'Agrumi' },
        { href: '/it/shop?category=floreali', label: 'Floreali' },
        { href: '/it/shop?category=erbacei', label: 'Erbacei' },
      ]
    },
    company: {
      title: 'Azienda',
      links: [
        { href: '/it/about', label: 'La Nostra Storia' },
        { href: '/it/sourcing', label: 'Provenienza' },
        { href: '/it/contact', label: 'Contatti' },
        { href: '/it/faq', label: 'FAQ' },
      ]
    },
    newsletter: {
      title: 'Unisciti al Nostro Viaggio',
      description: 'Ricevi saggezza sull\'aromaterapia, rituali stagionali e accesso anticipato ai nuovi raccolti.',
      placeholder: 'La tua email',
      button: 'Iscriviti',
      privacy: 'Rispettiamo la tua privacy. Cancellati quando vuoi.'
    },
    legal: {
      rights: 'Tutti i diritti riservati.',
      privacy: 'Privacy Policy',
      terms: 'Termini di Servizio',
      shipping: 'Spedizioni & Resi'
    }
  }
};

const t = content[lang];
const currentYear = new Date().getFullYear();
---

<footer class="relative pt-20 pb-8 border-t border-[var(--color-twilight)]/50">
  <!-- Decorative top border gradient -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-[var(--color-gold)]/20 to-transparent" />

  <div class="container">
    <!-- Main Footer Content -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8 mb-16">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <!-- Logo -->
        <a href={`/${lang}`} class="inline-flex items-center gap-3 mb-6 group">
          <div class="relative w-10 h-10 flex items-center justify-center">
            <div class="absolute inset-0 rounded-full border border-[var(--color-gold)]/30 group-hover:border-[var(--color-gold)]/60 transition-colors duration-500" />
            <span class="text-[var(--color-gold)] text-lg">✦</span>
          </div>
          <span class="font-serif text-xl tracking-wide text-[var(--color-cream)]">
            Gocce di Stella
          </span>
        </a>

        <p class="text-[var(--color-text-muted)] text-sm leading-relaxed max-w-xs">
          {t.tagline}
        </p>

        <!-- Social Links -->
        <div class="flex gap-4 mt-6">
          <a
            href="#"
            class="w-10 h-10 flex items-center justify-center rounded-full border border-[var(--color-twilight)] text-[var(--color-text-muted)] hover:border-[var(--color-gold)] hover:text-[var(--color-gold)] transition-all duration-300"
            aria-label="Instagram"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
          <a
            href="#"
            class="w-10 h-10 flex items-center justify-center rounded-full border border-[var(--color-twilight)] text-[var(--color-text-muted)] hover:border-[var(--color-gold)] hover:text-[var(--color-gold)] transition-all duration-300"
            aria-label="Pinterest"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.627 0-12 5.372-12 12 0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146 1.124.347 2.317.535 3.554.535 6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Shop Links -->
      <div>
        <h4 class="text-[var(--color-cream)] text-sm font-medium tracking-wide uppercase mb-6">
          {t.shop.title}
        </h4>
        <ul class="space-y-3">
          {t.shop.links.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-[var(--color-text-muted)] hover:text-[var(--color-gold)] transition-colors duration-300 text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h4 class="text-[var(--color-cream)] text-sm font-medium tracking-wide uppercase mb-6">
          {t.company.title}
        </h4>
        <ul class="space-y-3">
          {t.company.links.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-[var(--color-text-muted)] hover:text-[var(--color-gold)] transition-colors duration-300 text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Newsletter -->
      <div>
        <h4 class="text-[var(--color-cream)] text-sm font-medium tracking-wide uppercase mb-6">
          {t.newsletter.title}
        </h4>
        <p class="text-[var(--color-text-muted)] text-sm mb-4 leading-relaxed">
          {t.newsletter.description}
        </p>

        <form class="space-y-3">
          <div class="relative">
            <input
              type="email"
              placeholder={t.newsletter.placeholder}
              class="w-full px-4 py-3 bg-[var(--color-twilight)]/30 border border-[var(--color-twilight)] rounded-sm text-[var(--color-cream)] placeholder-[var(--color-text-muted)] focus:outline-none focus:border-[var(--color-gold)]/50 transition-colors duration-300 text-sm"
            />
          </div>
          <button
            type="submit"
            class="w-full py-3 bg-[var(--color-gold)] text-[var(--color-deep-night)] text-sm font-medium tracking-wider uppercase rounded-sm hover:bg-[var(--color-soft-gold)] transition-colors duration-300"
          >
            {t.newsletter.button}
          </button>
        </form>

        <p class="text-[var(--color-text-muted)] text-xs mt-3">
          {t.newsletter.privacy}
        </p>
      </div>
    </div>

    <!-- Divider -->
    <div class="h-px bg-gradient-to-r from-transparent via-[var(--color-twilight)] to-transparent mb-8" />

    <!-- Bottom Bar -->
    <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-xs text-[var(--color-text-muted)]">
      <p>
        © {currentYear} Gocce di Stella. {t.legal.rights}
      </p>

      <div class="flex flex-wrap justify-center gap-6">
        <a href={`/${lang}/privacy`} class="hover:text-[var(--color-gold)] transition-colors duration-300">
          {t.legal.privacy}
        </a>
        <a href={`/${lang}/terms`} class="hover:text-[var(--color-gold)] transition-colors duration-300">
          {t.legal.terms}
        </a>
        <a href={`/${lang}/shipping`} class="hover:text-[var(--color-gold)] transition-colors duration-300">
          {t.legal.shipping}
        </a>
      </div>
    </div>
  </div>
</footer>
